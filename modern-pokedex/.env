# Modern Pokédex Environment Variables

# Application
NODE_ENV=development
VITE_APP_TITLE=Modern Pokédex
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# Pokemon API
VITE_POKEMON_API_URL=https://pokeapi.co/api/v2
VITE_POKEMON_IMAGES_URL=https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon

# Features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Database (if using)
POSTGRES_DB=pokedex
POSTGRES_USER=pokedex
POSTGRES_PASSWORD=pokedex123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis (if using)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=pokedex123

# Monitoring
GRAFANA_PASSWORD=admin123

# Security
VITE_CSP_NONCE=
VITE_ENABLE_HTTPS=false

# Development
CHOKIDAR_USEPOLLING=true
VITE_HMR_PORT=24678

# Build
VITE_BUILD_ANALYZE=false
VITE_BUILD_SOURCEMAP=true

# Deployment
DOCKER_REGISTRY=
DOCKER_IMAGE_NAME=modern-pokedex
DOCKER_IMAGE_TAG=latest